<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingTop="15dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_quest_circle"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/circle"
            android:padding="5dp"
            android:src="@drawable/ic_check_white_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="90dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            tools:ignore="MissingPrefix">

            <TextView
                android:id="@+id/item_quest_title"
                fontPath="fonts/Lato-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                tools:text="Hiquest game" />

            <TextView
                android:id="@+id/item_quest_second_line"
                fontPath="fonts/Lato-Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                tools:text="Points value: 23" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/item_quest_rate1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/bell" />

            <ImageView
                android:id="@+id/item_quest_rate2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/bell" />

            <ImageView
                android:id="@+id/item_quest_rate3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/bell" />

            <ImageView
                android:id="@+id/item_quest_rate4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/bell" />
        </LinearLayout>
    </FrameLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="15dp"
        android:alpha="0.3"
        android:background="@color/divider" />

</LinearLayout>