<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.boldijarpaul.polihak.activities.QuestsActivity"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/quiz_question"
            fontPath="fonts/Lato-Black.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="20dp"
            tools:text="What is the first item to bla bla bla ?" />

        <FrameLayout
            android:id="@+id/quiz_layout_1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:clickable="true"
            android:padding="10dp">

            <ImageView
                android:id="@+id/quiz_icon_1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/circle"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="5dp"
                android:src="@drawable/ic_check_white_24dp" />

            <TextView
                android:id="@+id/quiz_answer_1"
                fontPath="fonts/Lato-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="70dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                tools:text="Leonardo Dicaprio"
                tools:textSize="18dp" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.15"
            android:background="@color/divider" />

        <FrameLayout
            android:id="@+id/quiz_layout_2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:clickable="true"
            android:padding="10dp">

            <ImageView
                android:id="@+id/quiz_icon_2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:alpha=".5"
                android:background="@drawable/circle"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="5dp"
                android:src="@drawable/ic_close_white_24dp" />

            <TextView
                android:id="@+id/quiz_answer_2"
                fontPath="fonts/Lato-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="70dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                tools:text="Leonardo Dicaprio"
                tools:textSize="18dp" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.15"
            android:background="@color/divider" />

        <FrameLayout
            android:id="@+id/quiz_layout_3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:clickable="true"
            android:padding="10dp">

            <ImageView
                android:id="@+id/quiz_icon_3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:alpha=".5"
                android:background="@drawable/circle"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:padding="5dp"
                android:src="@drawable/ic_close_white_24dp" />

            <TextView
                android:id="@+id/quiz_answer_3"
                fontPath="fonts/Lato-Bold.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="70dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                tools:text="Leonardo Dicaprio"
                tools:textSize="18dp" />

        </FrameLayout>
    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/quiz_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_play_for_work_white_24dp"
        app:elevation="4dp" />

</FrameLayout>
